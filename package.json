{
  "name": "monorepo-ecom",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "db:generate": "turbo db:generate",
    "db:migrate": "pnpm --filter @repo/db db:migrate",
    "db:studio": "pnpm --filter @repo/db db:studio",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,yaml}\""
  },
  "devDependencies": {
    "turbo": "^2.0.4", 
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "@types/node": "^22.10.7"
  },
  "packageManager": "pnpm@9.1.4" 
}